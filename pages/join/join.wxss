body,page {
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  background-color: #f5f5f5;
  background-repeat: no-repeat;
  background-size: cover;
  color: #000;
  padding: 0;
  display: block;
}

.showError {
  background: #de352d;
  color: #fff;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 24rpx;
  text-align: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 3;
}

#title {
  color: #fff;
  background-image: url("http://jluibm.cn/src/wx/login-bg.png");
  background-size: cover;
  font-size: 20px;
  padding: 50rpx;
}

.main-content {
  font-size: 16px;
}

.section {
  margin: 0;
  background-color: #fff;
  border: 1rpx solid #efefef;
  border-left: 0;
  border-right: 0;
  border-bottom: 0;
}

.bottom-item {
  border-bottom: 1rpx solid #efefef;
}

.section__title {
  float: left;
  background-color: #fff;
  height: 60rpx;
  margin-top: 15rpx;
  padding-left: 30rpx;
}

.form-group {
  height: 60rpx;
  margin-left: 180rpx;
  margin-top: 5rpx;
  padding: 10rpx 0rpx 10rpx 0rpx;
  background-color: #fff;
  width: 430rpx;
}

.subform {
  margin-bottom: 20rpx;
  margin: 0;
  padding: 15rpx 0rpx;
}

.sub-title {
  background-color: #f5f5f5;
  padding: 10rpx 0 10rpx 30rpx;
}

.radio {
  background-color: #fff;
  display: block;
  border-top: 1px solid #efefef;
  padding: 10rpx 0rpx 10rpx 30rpx;
}

.grade-group {
  background-color: #fff;
  padding: 10rpx 0rpx 10rpx 30rpx;
  border-color: #efefef;
  border: 1px 0 1px 0;
}

.itemview {
    height: 60rpx;
    border-top: 1px solid #efefef;
    padding: 10rpx;
    margin-left: 170rpx;
    margin-right: 20rpx;
    color: green;
}

.checkbox {
  background-color: #fff;
  display: block;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 0rpx 10rpx 30rpx;
}

.choose-group {
  padding-bottom: 10rpx;
}

.tips {
    border: 1px solid #ccc;
    border-radius: 10rpx;
    padding: 20rpx;
    margin: 40rpx 20rpx 20rpx 20rpx;
}

.tips-title {
    width: 120rpx;
    margin: 0;
    padding: 5px 10px;
    background-color: #fff;
    position: relative;
    top: -25px;
    left: 5px;
    text-align: center;
}

.tips-item {
  padding: 20rpx 0;
}

.btn-area {
  border: 0;
  margin-top: 0rpx;
  background-color: #f5f5f5;
  height: 100rpx;
}

.button {
  background-color: #0067b8;
  color: #efefef;
  border: 1px solid rgba(109, 182, 255, 0.2);
  border-radius: 10rpx;
  margin: 20rpx 100rpx 10rpx 100rpx;
  height: 80rpx;
  text-align: center;
  font-size: 16px;
  line-height: 80rpx;
}

.tip {
  text-align: center;
}

.bottom {
  margin-left: 40rpx;
  margin-top: 18rpx;
  width: 500rpx;
}

.page__bd {
  color: #000;
  font-size: 18px;
  text-align: center;
  margin-bottom: 80rpx;
}

.input-text {
  color: #000;
}