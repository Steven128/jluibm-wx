page {
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.container {
    font-size: 15px;
    background-image: url("http://www.jluibm.cn/src/wx/login-bg.png");
    background-size: cover;
    padding: 20rpx;
    color: #fff;
    height: 100%;
    width: 100%;
    display: block;
    overflow: hidden;
}

.head-content {
    padding: 30rpx;
    height: 250rpx;
}

.title {
    width: 200rpx;
    float: left;
    font-size: 20px;
}

.weather-show {
    font-size: 14px;
    text-align: right;
    float: right;
}

.weather-hide {
    display: none;
}

.weather-title {
    margin-bottom: 15rpx;
}

.weather-temp {
    margin: 5rpx auto;
}

.weather-wind {
    margin: 5rpx auto;
}

.main-content {
    padding: 0 20rpx 20rpx 20rpx;
    color: #000;
    background-color: #fff;
    border-radius: 20rpx;
    position: absolute;
    top: 250rpx;
    left: 15rpx;
    right: 15rpx;
    bottom: 20rpx;
}

.user-online-show {
    display: block;
}

.user-online-hide {
    display: none;
}

.user-offline-show {
    display: block;
}

.user-offline-hide {
    display: none;
}

.login {
    font-size: 14px;
    height: 80rpx;
    color: #fff;
    background-color: #0067b8;
    border: 1px solid rgba(109, 182, 255, 0.2);
    border-radius: 10rpx;
    margin: 50rpx 220rpx;
    line-height: 80rpx;
}

.user-info-show {
    display: block;
    position: absolute;
    top: 330rpx;
    left: 20rpx;
    right: 20rpx;
    bottom: 20rpx;
}

.user-info-hide {
    display: none;
}

.tourist-info-show {
    display: block;
    position: absolute;
    top: 300rpx;
    left: 20rpx;
    right: 20rpx;
    bottom: 20rpx;
}

.tourist-info-hide {
    display: none;
}

.waiting-show {
    display: block;
    position: absolute;
    top: 300rpx;
    left: 20rpx;
    right: 20rpx;
    bottom: 20rpx;
}

.waiting-hide {
    display: none;
}

.user-welcome {
    text-align: center;
}

.user-pic {
    width: 200rpx;
    height: 200rpx;
    margin: -100rpx auto 20rpx auto;
    background-color: transparent;
    text-align: center;
    border: 0;
}

.userPic-wrap {
    margin: auto;
    width: 196rpx;
    height: 196rpx;
    border-radius: 50%;
    border: 1px solid #fff;
    background-image: url("http://www.jluibm.cn/src/wx/login-bg.png");
}

.user {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    border: 5px solid #fff;
}

.info-box {
    border: 3px solid rgb(201, 233, 255);
    border-radius: 20rpx;
    padding: 30rpx;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.info-title {
    text-align: center;
    background-color: #fff;
    width: 140px;
    padding: 5rpx;
    border-bottom: 2px solid rgb(201, 233, 255);
    position: relative;
    top: -65rpx;
}

.info-inner {
    position: relative;
    top: -50rpx;
    overflow: auto;
}

.info {
    font-size: 14px;
    margin: 10rpx 30rpx;
    padding: 15rpx 20rpx;
    border-bottom: 1px solid #eee;
}

.info-offline {
    margin: 50rpx 30rpx;
    color: #888;
}

.logout {
    border: 1px solid #fff;
    border-radius: 10rpx;
    height: 70rpx;
    background-color: darkred;
    color: #fff;
    font-size: 14px;
    margin: 30rpx 220rpx;
    line-height: 70rpx;
}
