page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}

.content {
    background-color: #f5f5f5;
    background-repeat: no-repeat;
    background-size: cover;
    color: #000;
}

.showError {
    background: #de352d;
    color: #fff;
    height: 58rpx;
    line-height: 58rpx;
    font-size: 24rpx;
    text-align: center;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 3;
}

#title {
    border-top: 2px solid #efefef;
    background-color: #fff;
    background-size: cover;
    font-size: 20px;
    padding: 50rpx;
}

#main {
    font-size: 16px;
}

.section {
    margin: 0;
    background-color: #fff;
    border: 1rpx solid #efefef;
    border-left: 0;
    border-right: 0;
    border-bottom: 0;
}

.bottom-item {
    border-bottom: 1rpx solid #efefef;
}

.section__title {
    float: left;
    background-color: #fff;
    height: 60rpx;
    margin-top: 15rpx;
    padding-left: 30rpx;
}

.form-group {
    height: 60rpx;
    margin-left: 180rpx;
    margin-top: 5rpx;
    padding: 10rpx 0rpx 10rpx 0rpx;
    background-color: #fff;
    width: 500rpx;
}

.subform {
    margin-bottom: 20rpx;
    margin: 0;
    padding: 15rpx 0rpx;
}

.sub-title {
    background-color: #f5f5f5;
    padding: 20rpx 0 20rpx 30rpx;
}

.radio {
    background-color: #fff;
    display: block;
    border-top: 1px solid #efefef;
    padding: 10rpx 0rpx 10rpx 30rpx;
}

.grade-group {
    background-color: #fff;
    padding: 10rpx 0rpx 10rpx 30rpx;
    border-color: #efefef;
    border: 1px 0 1px 0;
}

.checkbox {
    background-color: #fff;
    display: block;
    border-top: 1px solid #efefef;
    padding: 10rpx 0rpx 10rpx 30rpx;
}

.btn-area {
    border: 0;
    margin-top: 80rpx;
    background-color: #f5f5f5;
    height: 120rpx;
}

.button {
    background-color: #0067b8;
    color: #efefef;
    float: center;
    width: 450rpx;
    margin-bottom: 50rpx;
    line-height: 80rpx;
    height: 80rpx;
    text-align: center;
    font-size: 16px;
}

.tip {
    text-align: center;
}

.bottom {
    margin-left: 40rpx;
    margin-top: 18rpx;
    width: 500rpx;
}

.page__bd {
    color: #000;
    font-size: 18px;
    text-align: center;
    margin-bottom: 80rpx;
}

.input-text {
    color: #000;
}

.item {
    line-height: 80rpx;
    height: 80rpx;
    border: 0;
    background-color: transparent;
}

.pic-container {
    background-color: #fff;
    text-align: center;
}

.preview-box {
    border-top: 1px solid #efefef;
    padding: 40rpx;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    background-color: #e5e5e5;
    border-radius: 50%;
    display: inline-block;
}

.image-text {
    display: inline-block;
    width: 200rpx;
    position: relative;
    top: -90rpx;
}
